{% extends 'DBAppBundle::emailBaseLayout.html.twig' %}

{% block container %}
<table cellpadding="0" cellspacing="0">
	<tr>
		<td>
			<img class="img-responsive" src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/dbapp/postr/img/header.jpg') }}" />
		</td>
	</tr>
	<tr>
		<td class="content-block">
			<h3>Dear Team</h3>
		</td>
	</tr>
	<tr>
		<td class="content-block">
			<p>New customer registed with us, Customer detail as follow</p>
			<table cellpadding="0" cellspacing="0">
				<tr>
					<td>Account Id</td><td style="padding-left: 20px;">{{ response.userDetail.account.accountId | default('#') }}</td>
				</tr>
				<tr>
					<td>Name</td><td style="padding-left: 20px;">{{ response.userDetail.firstName | default('') }} {{ response.userDetail.lastName | default('') }}</td>
				</tr>
				<tr>
					<td>Email</td><td style="padding-left: 20px;">{{ response.userDetail.email | default('') }}</td>
				</tr>
				<tr>
					<td>Time Created</td><td style="padding-left: 20px;">{{ response.userDetail.createdAt | default('') }}</td>
				</tr>
			</table>
		</td>
	</tr>
</table>
{% endblock %}