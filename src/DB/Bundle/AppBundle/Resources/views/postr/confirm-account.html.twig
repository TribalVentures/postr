{% extends 'DBAppBundle::step-Layout.html.twig' %}

{% block title %}InteriorPostr{% endblock %}

{% block pageInStyle %}
	<link href="{{ asset('bundles/dbapp/postr/css/plugins/iCheck/custom.css') }}" rel="stylesheet">
{% endblock %}

{% block stepHeaderContainer %}
	<h2>Email Confirmation</h2>
	<p>
		<strong>Please confirm your email</strong>
	</p>
{% endblock %}

{% block container %}
<div class="wrapper wrapper-content">
	<div class="middle-box mt0 animated fadeIn">
		<h3 class="font-bold text-center">Thank you</h3>
		<div class="error-desc">
			<div class="text-center">Please check your email for our email confirmation link to continue. If you do not receive the email within 10 minutes, please click the button below to resend it.</div>
			<hr />
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12">
			<div class="continue-action">
				<form action="{{ path('db_postreach_register_confirm_account') }}" method="post">
					<input type="hidden" name="k" value="{{ response.tempUniqueKey | default('') }}"/>
					<button type="submit" class="btn btn-primary btn-lg btn-block">Resend Confirm Email</a>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block bodyOutPopup %}
{% endblock %}

{% block bodyOutPagesScript %}
	<!-- iCheck -->
    <script src="{{ asset('bundles/dbapp/postr/js/plugins/iCheck/icheck.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
{% endblock %}