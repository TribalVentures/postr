{% extends 'DBAppBundle::baseAdminLayout.html.twig' %}

{% block body_attr %} class="gray-bg"{% block anguler %}{% endblock %}{% endblock %}

{% block body %}
<div class="middle-box text-center loginscreen animated fadeInDown">
	<div>
		<div>
			<h2 class="logo-name">
				<img src="{{ asset('bundles/dbapp/postr/img/postr-logo.png') }}" />
			</h2>
		</div>
		<h3>Lost Password</h3>
		{% if response.isSend is defined and response.isSend is not empty and response.isSend == '1' %}
			<div class="alert alert-success">
				When you receive your reset password information, follow the direction in email to reset your password
			</div>
		{% endif %}
		<p>In order to recive reset password instruction, Enter your email address you provided during the registration process. </p>
		<form id="loginForm" name="loginForm" action="{{ path('db_postreach_forgot_password') }}" method="post" class="m-t" role="form">
			{% if response.error is defined %}
				<div class="alert alert-danger alert-dismissable alert-message">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
					<span>{{ response.error }}!</span>
				</div>
			{% endif %}
			
			<div class="form-group">
				<input name="loginForm[email]" type="email" class="form-control" placeholder="Email" required="required">
			</div>
			
			<button type="submit" class="btn btn-primary block full-width m-b">Send me</button>
			
			<p class="text-muted text-center">
				<small>Do have an account?</small>
			</p>
			<a class="btn btn-sm btn-white btn-block" href="{{ path('db_postreach') }}">Login</a>
		</form>
		<p class="m-t">
			<small>Copyright &copy; 2017. All rights reserved.</small>
		</p>
	</div>
</div>
{% endblock %}

{% block bodyOutPopup %}
{% endblock %}

{% block bodyOutPagesScript %}
<script type="text/javascript">
$(document).ready(function() {
	setTimeout(function() { 
		$('.alert-message').hide(); 
	}, 5000);
});
{% endblock %}