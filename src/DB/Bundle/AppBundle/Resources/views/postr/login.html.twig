{% extends 'DBAppBundle::baseAdminLayout.html.twig' %}

{% block body_attr %} class="gray-bg"{% block anguler %}{% endblock %}{% endblock %}

{% block body %}
<div class="middle-box text-center loginscreen animated fadeInDown">
	<div>
		<div>
			<h2 class="logo-name">
				<img src="{{ asset('bundles/dbapp/postr/img/postr-logo.png') }}" />
			</h2>
		</div>
		<h3>Welcome to Postr</h3>
		<p>
			Automate your Social Media content. 
		</p>
		<p>Strictly for Interior Decorators and Designers!</p>
		<form id="loginForm" name="loginForm" action="{{ path('db_postreach_login') }}" method="post" class="m-t" role="form">
			{% if response.error is defined %}
				<div class="alert alert-danger alert-dismissable">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
					<span>{{ response.error }}!</span>
				</div>
			{% endif %}
			
			<div class="form-group">
				<input name="loginForm[email]" type="email" class="form-control" placeholder="Email" required="">
			</div>
			<div class="form-group">
				<input name="loginForm[password]" type="password" class="form-control" placeholder="Password" required="">
			</div>
			
			<button type="submit" class="btn btn-primary block full-width m-b">Login</button>
			
			<a href="{{ path('db_postreach_forgot_password') }}"><small>Forgot password?</small></a>
			
			<p class="text-muted text-center">
				<small>Need an Account?</small>
			</p>
			<a class="btn btn-sm btn-white btn-block" href="{{ path('db_postreach_register') }}">Create an account</a>
		</form>
		<p class="m-t">
			<small>Copyright &copy; 2017. All rights reserved.</small>
		</p>
	</div>
</div>
{% endblock %}

{% block bodyOutPopup %}
{% endblock %}

{% block bodyOutPagesScript %}
{% endblock %}